<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.SalesReportPage"
             BackgroundColor="#F5F5F5"
             Title="Reporte de Ventas">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Image Source="william_logo.png" HeightRequest="100" HorizontalOptions="Center" />
        <Label Text="Reporte de Ventas" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="#000000" />

        <DatePicker x:Name="DatePicker"
                    Format="D"
                    HorizontalOptions="Center" />

        <Label Text="Seleccione un período:" 
               FontSize="18" 
               HorizontalOptions="Center" />
        <Picker x:Name="PeriodPicker"
                Title="Período"
                HorizontalOptions="Center">
            <Picker.Items>
                <x:String>Día</x:String>
                <x:String>Semana</x:String>
                <x:String>Mes</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Total Ventas: $0.00" 
               x:Name="TotalLabel"
               FontSize="20" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="#000000" />

        <Button Text="Generar Reporte" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" 
                Clicked="OnGenerateReportClicked" />

        <ScrollView>
            <VerticalStackLayout x:Name="ReportContainer" Spacing="10">
                <!-- Contenido del reporte se llenará dinámicamente -->
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>