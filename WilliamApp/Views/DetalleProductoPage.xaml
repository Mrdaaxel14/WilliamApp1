<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.DetalleProductoPage"
             Title="Detalle del producto">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="{Binding Producto.Descripcion}"
                   FontAttributes="Bold"
                   FontSize="24" />

            <Label Text="{Binding Producto.Marca}" />
            <Label Text="{Binding Producto.oCategoria.Descripcion}" />
            <Label Text="{Binding Producto.Precio, StringFormat='Precio: ${0:F2}'}"
                   FontSize="20"
                   TextColor="Green" />

            <Stepper Minimum="1"
                     Maximum="50"
                     Increment="1"
                     Value="{Binding Cantidad}"
                     HorizontalOptions="Start" />
            <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}" />

            <Button Text="Agregar al carrito"
                    BackgroundColor="#FFD600"
                    TextColor="Black"
                    Command="{Binding AgregarAlCarritoCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>