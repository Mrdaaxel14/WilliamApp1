<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.PedidosPage"
             Title="Mis pedidos">

    <CollectionView ItemsSource="{Binding Pedidos}" Margin="10">
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24" Spacing="6" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="A&#250;n no tienes pedidos registrados" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Realiza una compra para ver tus pedidos aqu&#237;." FontSize="14" TextColor="Gray" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10">

                    <VerticalStackLayout>
                        <Label Text="{Binding Fecha}" />
                        <Label Text="{Binding Total, StringFormat='Total: ${0:F2}'}" />
                    </VerticalStackLayout>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
