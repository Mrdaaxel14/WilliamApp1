<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.CatalogoPage"
             Title="Catálogo">
    <RefreshView Command="{Binding RecargarCommand}" IsRefreshing="{Binding IsBusy}">
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Label Text="Explorá nuestro catálogo"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black" />
                <CollectionView ItemsSource="{Binding Categorias}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="#FFD600" CornerRadius="12" Padding="12" HasShadow="True">
                                <VerticalStackLayout Spacing="8">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                        <Border Stroke="#FFD600"
                                                StrokeShape="RoundRectangle 12"
                                                Padding="8"
                                                BackgroundColor="#FFF9C4">
                                            <Label Text="{Binding NombreCategoria}" FontAttributes="Bold" />
                                        </Border>
                                        <Label Grid.Column="1"
                                               Text="Descubrí todos los productos disponibles"
                                               TextColor="Gray"
                                               VerticalOptions="Center" />
                                    </Grid>
                                    <CollectionView ItemsSource="{Binding Productos}"
                                                        SelectionMode="Single"
                                                        SelectionChanged="OnProductoSeleccionado"
                                                        ItemsLayout="VerticalList">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame BorderColor="#E0E0E0" CornerRadius="10" Padding="10" Margin="0,4">
                                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                                        <VerticalStackLayout Spacing="2">
                                                            <Label Text="{Binding Descripcion}"
                                                                       FontSize="16"
                                                                       FontAttributes="Bold" />
                                                            <Label Text="{Binding Marca}" TextColor="#616161" />
                                                            <Label Text="{Binding Precio, StringFormat='${0:F2}'}"
                                                                       TextColor="#2E7D32"
                                                                       FontAttributes="Bold" />
                                                        </VerticalStackLayout>
                                                        <Label Text="⟩"
                                                                   FontSize="24"
                                                                   TextColor="#FFD600"
                                                                   VerticalOptions="Center"
                                                                   HorizontalOptions="End" />
                                                    </Grid>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>