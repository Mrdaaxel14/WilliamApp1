<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.AgregarDireccionPage"
             Title="Agregar Dirección"
             BackgroundColor="#F9F9F9">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Frame BackgroundColor="White" 
                   Padding="20" 
                   CornerRadius="12" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Nueva Dirección"
                           FontAttributes="Bold"
                           FontSize="22"
                           HorizontalOptions="Center"
                           TextColor="#101010" />

                    <Label Text="Provincia" 
                           FontSize="14" />
                    <Entry Text="{Binding Provincia}" 
                           Placeholder="Ingrese la provincia"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />

                    <Label Text="Ciudad *" 
                           FontSize="14" />
                    <Entry Text="{Binding Ciudad}" 
                           Placeholder="Ingrese la ciudad"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />

                    <Label Text="Calle *" 
                           FontSize="14" />
                    <Entry Text="{Binding Calle}" 
                           Placeholder="Ingrese la calle"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />

                    <Label Text="Número" 
                           FontSize="14" />
                    <Entry Text="{Binding Numero}" 
                           Placeholder="Ingrese el número"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />

                    <Label Text="Código Postal" 
                           FontSize="14" />
                    <Entry Text="{Binding CodigoPostal}" 
                           Placeholder="Ingrese el código postal"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />

                    <Label Text="* Campos obligatorios" 
                           FontSize="12" 
                           TextColor="Gray"
                           Margin="0,10,0,0" />

                    <Button Text="Guardar"
                            BackgroundColor="#FFD600"
                            TextColor="Black"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            Command="{Binding GuardarCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Margin="0,10,0,0" />

                    <Button Text="Cancelar"
                            BackgroundColor="White"
                            TextColor="Black"
                            BorderColor="#E0E0E0"
                            BorderWidth="1"
                            HeightRequest="50"
                            CornerRadius="10"
                            Command="{Binding CancelarCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />

                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                       IsVisible="{Binding IsLoading}"
                                       Color="#FFD600"
                                       HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
