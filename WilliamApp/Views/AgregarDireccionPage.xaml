<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.AgregarDireccionPage"
             Title="Agregar dirección"
             BackgroundColor="#F9F9F9">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Frame BackgroundColor="White" Padding="20" CornerRadius="12" HasShadow="True">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Nueva dirección"
                           FontAttributes="Bold"
                           FontSize="20" />

                    <Label Text="Provincia" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Provincia}"
                           Placeholder="Ej: Buenos Aires" />

                    <Label Text="Ciudad *" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Ciudad}"
                           Placeholder="Ej: La Plata" />

                    <Label Text="Calle *" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Calle}"
                           Placeholder="Ej:  Av. 7" />

                    <Label Text="Número" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Numero}"
                           Placeholder="Ej:  1234"
                           Keyboard="Numeric" />

                    <Label Text="Código Postal" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding CodigoPostal}"
                           Placeholder="Ej:  1900"
                           Keyboard="Numeric" />

                </VerticalStackLayout>
            </Frame>
            <Button Text="Guardar"
                    BackgroundColor="#FFD600"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding GuardarCommand}" />

            <Button Text="Cancelar"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding CancelarCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="#FFD600"
                               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>