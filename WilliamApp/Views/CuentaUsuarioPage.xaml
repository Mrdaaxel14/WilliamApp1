<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.CuentaUsuarioPage"
             Title="Mi perfil"
             BackgroundColor="#F9F9F9">
    
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">
            <Frame BackgroundColor="#FFD600" Padding="20" CornerRadius="12">
                <VerticalStackLayout>
                    <Label Text="Mis datos"
                           FontAttributes="Bold"
                           FontSize="20" />
                    <Label Text="Nombre" />
                    <Entry Text="{Binding Nombre}" />
                    <Label Text="Email" />
                    <Entry Text="{Binding Email}" />
                    <Label Text="Teléfono" />
                    <Entry Text="{Binding Telefono}" />
                    <Button Text="Guardar cambios"
                            BackgroundColor="White"
                            TextColor="Black"
                            Command="{Binding GuardarDatosCommand}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="12" BorderColor="#E0E0E0" HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Métodos de pago" FontAttributes="Bold" />
                    <CollectionView ItemsSource="{Binding MetodosPago}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Editar"
                                                      BackgroundColor="#4CAF50"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type BindingContext}}, Path=BindingContext.EditarMetodoPagoCommand}"
                                                      CommandParameter="{Binding}" />
                                            <SwipeItem Text="Eliminar"
                                                      BackgroundColor="#F44336"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type BindingContext}}, Path=BindingContext.EliminarMetodoPagoCommand}"
                                                      CommandParameter="{Binding}" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <Frame Padding="10" BorderColor="#FFD600" CornerRadius="10" Margin="0,0,0,8">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Metodo}" FontAttributes="Bold" />
                                            <Label Text="{Binding Resumen}" FontSize="12" TextColor="#616161" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Agregar método"
                            Command="{Binding AgregarMetodoPagoCommand}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="12" BorderColor="#E0E0E0" HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Direcciones" FontAttributes="Bold" />
                    <CollectionView ItemsSource="{Binding Direcciones}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Editar"
                                                      BackgroundColor="#4CAF50"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type BindingContext}}, Path=BindingContext.EditarDireccionCommand}"
                                                      CommandParameter="{Binding}" />
                                            <SwipeItem Text="Eliminar"
                                                      BackgroundColor="#F44336"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type BindingContext}}, Path=BindingContext.EliminarDireccionCommand}"
                                                      CommandParameter="{Binding}" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <Frame Padding="10" BorderColor="#FFD600" CornerRadius="10" Margin="0,0,0,8">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Etiqueta}" FontAttributes="Bold" />
                                            <Label Text="{Binding CodigoPostal, StringFormat='CP: {0}'}" FontSize="12" TextColor="#616161" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Agregar dirección"
                            Command="{Binding AgregarDireccionCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>