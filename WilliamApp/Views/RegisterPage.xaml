<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.Views.RegisterPage"
             Title="Crear cuenta"
             BackgroundColor="#F9F9F9">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Frame BackgroundColor="White" Padding="20" CornerRadius="12" HasShadow="True">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Nueva cuenta"
                           FontAttributes="Bold"
                           FontSize="24"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />

                    <Label Text="Nombre *" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Nombre}"
                           Placeholder="Ingresa tu nombre completo" />

                    <Label Text="Email *" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Email}"
                           Placeholder="ejemplo@correo.com"
                           Keyboard="Email" />

                    <Label Text="Teléfono" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Telefono}"
                           Placeholder="Opcional"
                           Keyboard="Telephone" />

                    <Label Text="Contraseña *" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding Password}"
                           Placeholder="Mínimo 6 caracteres"
                           IsPassword="True" />

                    <Label Text="Confirmar contraseña *" FontSize="14" TextColor="#616161" />
                    <Entry Text="{Binding ConfirmPassword}"
                           Placeholder="Confirma tu contraseña"
                           IsPassword="True" />

                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Crear cuenta"
                    BackgroundColor="#FFD600"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding RegisterCommand}" />

            <Button Text="Ya tengo cuenta"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding IrALoginCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="#FFD600"
                               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
