<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.MainPage"
             BackgroundColor="#F5F5F5">
    <VerticalStackLayout Spacing="20" Padding="0, 0, 0 , 0">
        <!-- Header Grid -->
        <Grid ColumnDefinitions="*,Auto" 
              Padding="10" 
              BackgroundColor="#FFFFFF" 
              RowSpacing="0"
              ColumnSpacing="10">
            <Border Grid.Column="0" 
                    Stroke="#CCCCCC" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10" 
                    BackgroundColor="White"
                    Padding="5">
                <Entry Placeholder="Buscar..." 
                       TextColor="Black" 
                       BackgroundColor="Transparent" 
                       ClearButtonVisibility="WhileEditing" />
            </Border>
            <Image Grid.Column="1"
                   Source="user_profile.png" 
                   HeightRequest="50" 
                   WidthRequest="50" 
                   HorizontalOptions="End" 
                   Aspect="AspectFill" 
                   VerticalOptions="Center">
                <Image.Clip>
                    <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25" />
                </Image.Clip>
            </Image>
        </Grid>
        <VerticalStackLayout Spacing="20" Padding="20, 0, 20, 20">
            <Label Text="William Mayorista y Minorista" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="#000000" />
            <Button Text="Ver Productos" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                Padding="15" 
                HorizontalOptions="Fill"
                Clicked="OnVerReportesDeVentasClicked" />
            <Button Text="Estado de Stock" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" />
            <Button Text="Productos Más Vendidos" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" />
            <Button Text="Notificaciones" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
