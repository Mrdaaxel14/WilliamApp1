<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilliamApp.MainPage"
             BackgroundColor="#F5F5F5">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Image Source="william_logo.png" HeightRequest="100" HorizontalOptions="Center" />
        <Label Text="William Mayorista y Minorista" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="#000000" />
        <Button Text="Ver Reportes de Ventas" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                Padding="15" 
                HorizontalOptions="Fill"
                Clicked="OnVerReportesDeVentasClicked" />
        <Button Text="Estado de Stock" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" />
        <Button Text="Productos Más Vendidos" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" />
        <Button Text="Notificaciones" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                CornerRadius="10" 
                Padding="15" 
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>