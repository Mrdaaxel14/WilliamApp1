<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WilliamApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WilliamApp"
    FlyoutBehavior="Disabled">

    <!-- Register LoginPage as the initial route -->
    <ShellContent
        x:Name="LoginShellContent"
        Route="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}" />

    <FlyoutItem Title="Inicio" Icon="william_logo.png" >
        <ShellContent
            Route="MainPage"
            Title="Principal"
            ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Categorias"
                Icon="dog.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:SalesReportPage}" />
        </Tab>
    </FlyoutItem>

    <!-- Otros FlyoutItems pueden ir aquÃ­ -->

</Shell>