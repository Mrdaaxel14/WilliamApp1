<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="WilliamApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WilliamApp.Views"
    BackgroundColor="MidnightBlue">

    <FlyoutItem Route="home" Title="Inicio" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Route="catalogo" Title="Catálogo" Icon="catalogo.png">
        <ShellContent ContentTemplate="{DataTemplate views:CatalogoPage}" />
    </FlyoutItem>

    <FlyoutItem Route="carrito" Title="Carrito" Icon="carrito.png">
        <ShellContent ContentTemplate="{DataTemplate views:CarritoPage}" />
    </FlyoutItem>

    <FlyoutItem Route="pedidos" Title="Mis Pedidos" Icon="pedidos.png">
        <ShellContent ContentTemplate="{DataTemplate views:PedidosPage}" />
    </FlyoutItem>

    <FlyoutItem Route="perfil" Title="Perfil" Icon="usuario.png">
        <ShellContent ContentTemplate="{DataTemplate views:CuentaUsuarioPage}" />
    </FlyoutItem>

    <!-- Menu fijo abajo del Flyout -->
    <MenuItem Text="Cerrar Sesión" IconImageSource="logout.png" Clicked="OnCerrarSesionClicked" />

</Shell>